<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<style>
  ::placeholder {
    color: #c2c2c2;
  }
</style>
<body>
  <div class="container">
    <h1>URL Shortner</h1>
    <form class="my-4 form-inline" method="POST" action="/shortUrl">
      <label class="sr-only" for="longUrl">URL</label>
      <input required class="form-control mr-2 col" placeholder="Url" type="url" name="longUrl" id="longUrl">
      <button type="submit" class="btn btn-success">Generate</button>
    </form>

    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Full Url</th>
          <th>Short Url</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(url => { %>
          <tr>
            <td><a href="<%= url.longUrl %>"><%= url.longUrl %></a></td>
            <td><a href="<%= url.shortUrl %>"><%= url.shortUrl %></a></td>
            <td><%= url.clicks %></td>
          </tr>    
        <%}) %>
      </tbody>
    </table>
  </div>
</body>
</html>